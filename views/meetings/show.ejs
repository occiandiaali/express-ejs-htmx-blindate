<section>
    <button hx-get="/meetings" hx-target="#content" hx-push-url="true">
    back
  </button>
  <h1 style="font-size: medium;">Meeting <%= meeting.meetingID %></h1>

  <p><strong>Date:</strong> <%= meeting.startDate %></p>
  <p><strong>Time:</strong> <%= meeting.startTime %></p>
  <p><strong>Scene:</strong> <%= meeting.sceneType %></p>
  <p><strong>Duration:</strong> <%= meeting.duration %> minutes</p>
  <p><strong>Participants:</strong> <%= meeting.participants.join(" & ") %></p>

  <div style="display: flex;flex-direction: row; justify-content: space-around;"></div>

  <button
    hx-get="/meetings/<%= meeting._id %>/join"
    hx-target="#modal"
    hx-swap="innerHTML"
    style="background-color: green; color: white; margin: 6px"
  >
    Join
  </button>

  <form
    hx-post="/meetings/<%= meeting._id %>/delete"
    hx-target="#content"
    hx-push-url="true"
  >
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button type="submit">Cancel meeting</button>
  </form>
  </div>
</section>
